{
    "branches": [
        "main",
        {
            "name": "develop",
            "prerelease": "beta"
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits"
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance"
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation",
                            "hidden": false
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Refactor",
                            "hidden": false
                        },
                        {
                            "type": "test",
                            "section": "‚úÖ Tests",
                            "hidden": true
                        },
                        {
                            "type": "chore",
                            "hidden": true
                        },
                        {
                            "type": "config",
                            "section": "‚öôÔ∏è Configuration",
                            "hidden": false
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "dist/lib/dai.mjs",
                        "label": "Dai (ESM)"
                    },
                    {
                        "path": "dist/lib/dai.umd.js",
                        "label": "Dai (UMD)"
                    },
                    {
                        "path": "dist/lib/dai.js",
                        "label": "Dai (CJS)"
                    }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json"
                ],
                "message": "chore(release): ${nextRelease.version}"
            }
        ]
    ]
}